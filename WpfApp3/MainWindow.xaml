<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Width="255" Height="220" > 
        <TextBox Name="tbLogin" Width="255" Height="25" ></TextBox>
            <TextBox Name="tbPassword" Width="255" Height="25"  Margin="0,5,0,10"></TextBox>
            <Button Name="btnAutorization" Click="btnAutorization_Click">Авторизация</Button>
        </StackPanel>
    </Grid>
</Window>
