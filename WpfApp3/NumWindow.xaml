<Window x:Class="WpfApp3.NumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="NumWindow" Height="250" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Width="255" Height="220" >
            <TextBox Name="tbNum" Width="255" Height="25"  Margin="0,5,0,10"></TextBox>
            <Button Name="btnConfirm" Click="btnConfirm_Click">Подтвердить</Button>
        </StackPanel>
    </Grid>
</Window>
